<local:ModuleBaseDlg x:Class="BrainSimulator.Modules.ModuleMentalModelDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"      
        xmlns:local="clr-namespace:BrainSimulator.Modules"
        mc:Ignorable="d"
        Title="MentelModel Dialog Template" Height="220" Width="620" Background="Gray" ShowInTaskbar="False" >

    <Grid>

        <Border Grid.Row="0" Background="DarkGray" ClipToBounds="True" Margin="0,0,0,45">
            <Canvas x:Name="theCanvas"
                    Background="DarkGray"
                    ClipToBounds="True"
                    MouseWheel="TheCanvas_MouseWheel"
                    MouseLeftButtonDown="TheCanvas_MouseLeftButtonDown"
                    MouseLeftButtonUp="TheCanvas_MouseLeftButtonUp"
                    MouseMove="TheCanvas_MouseMove"
                    MouseLeave="TheCanvas_MouseLeave">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="CanvasScale" />
                        <TranslateTransform x:Name="CanvasTranslate" />
                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>
        </Border>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="20,0,0,25">
            <TextBlock Text="Zoom" Margin="0,0,6,0" VerticalAlignment="Center"/>
            <Slider x:Name="ZoomSlider"
                    Width="180"
                    Minimum="0.25"
                    Maximum="4"
                    Value="1"
                    TickFrequency="0.25"
                    IsSnapToTickEnabled="True"
                    ValueChanged="ZoomSlider_ValueChanged" />
            <Button Content="Reset" Width="70" Margin="10,0,0,0" Click="ResetView_Click"/>
            <TextBlock Text="Pan: drag   Zoom: wheel/slider" Margin="14,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</local:ModuleBaseDlg>