<local:ModuleBaseDlg x:Class="BrainSimulator.Modules.ModuleWellBeingDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainSimulator.Modules"
        mc:Ignorable="d"
        Title="Well-Being" Height="170" Width="560" Background="Gray" ShowInTaskbar="False" >

    <Grid >
        <Slider x:Name="WellBeingSlider"
                Minimum="-1" Maximum="1"
                LargeChange="0.1" SmallChange="0.05"
                TickFrequency="0.5" IsSnapToTickEnabled="False" TickPlacement="Both"
                Height="40"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Margin="20,20,20,60"
                ValueChanged="WellBeingSlider_ValueChanged"/>

        <Button x:Name="DecreaseButton" FontSize="24"
                Content="-" Width="40" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="80,0,0,40"
                Click="DecreaseButton_Click"/>

        <Button x:Name="IncreaseButton" FontSize="24"
                Content="+" Width="40" Height="30"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,80,40"
                Click="IncreaseButton_Click"/>
    </Grid>
</local:ModuleBaseDlg>